<meta http-equiv="Refresh" content="1; url={$config["baseUrl"]}">
 
<script type="text/javascript">
    
var url = window.location.href;
    
              if (url.indexOf("https") < 0) {
    
                  url = url.replace("http:", "https:");
    
                  window.location.replace(url);
    
              }
    
</script>